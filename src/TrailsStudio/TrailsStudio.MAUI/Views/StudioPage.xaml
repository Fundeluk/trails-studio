<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrailsStudio.MAUI.StudioPage"
             xmlns:evergine="clr-namespace:TrailsStudio.MAUI.Evergine"
             Title="StudioPage"
             Shell.NavBarIsVisible="false" >    
    <Grid>
        <Label HorizontalOptions="Start" VerticalOptions="Start" Text="X coordinate:" />
        <Label HorizontalOptions="Start" VerticalOptions="Start" Text="{Binding cameraX}" />

        <Label HorizontalOptions="Center" VerticalOptions="Start" Text="Y coordinate:" />
        <Label HorizontalOptions="Center" VerticalOptions="Start" Text="{Binding cameraY}" />

        <Label HorizontalOptions="End" VerticalOptions="Start" Text="Z coordinate:" />
        <Label HorizontalOptions="End" VerticalOptions="Start" Text="{Binding cameraZ}" />

        <evergine:EvergineView x:Name="evergineView" />
    </Grid>
</ContentPage>